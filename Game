def game_sections():
    print('\n\n\n')
    print('{:^140}'.format('From Here You Have To Choose One Section'))
    print('{:^140}'.format('Choose wisely coz all the questions are from that section'))
    print('\n\n\n')
    print('{:^140}'.format('1.Science And Technology'))
    print('{:^140}'.format('2.Sports and Games'))
    print('{:^140}'.format('3.General knowledge'))
    print('{:^140}'.format('Good Luck!!!!!'))
    print('\n\n\n')
    choice=input('{:^140}'.format('---Choose from above sections---'))
    if(choice=='1'):
        Science_section()
    elif(choice=='2'):
        Sports_section()
    elif(choice=='3'):
        General_section()    
        
        

