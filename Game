def first_click():
    print('\n\n\n')
    print('{:^140s}'.format(">>> Enter 'A' for about"))
    print('{:^140s}'.format(">>> Enter 'S' to start the game"))
    print('{:^140s}'.format(">>> Press 'I' for the instructions of the game"))
    print('{:^140s}'.format(">>> Press 'Q' to quit the game"))
    print('{:^140s}'.format(">>> Press 'H' for help "))

    choice=input('{:^140s}'.format('Enter Your Choice---'))

    if(choice=='A'):
        about()
        print('')
        print('{:^140}'.format('---Want To Start Game---'))
        choice2=input('{:^140}'.format('---Y for Yes and N for No---'))
        if(choice2=='Y'):
            first_click()
        else:
            quit()
    elif(choice=='H'):
        Help()
        print('')
        print('{:^140}'.format('---Want To Start Game---'))
        choice2=input('{:^140}'.format('---Y for Yes and N for No---'))
        if(choice2=='Y'):
            first_click()
        else:
            quit()  
    elif(choice=='I'):
        inst()
        print('')
        print('{:^140}'.format('---Want To Start Game---'))
        choice2=input('{:^140}'.format('---Y for Yes and N for No---'))
        if(choice2=='Y'):
            first_click()
        else:
            quit()
    elif (choice=='S'):
        entry_page()
    elif(choice=='Q'):
        exit()

    if(choice!='A' or choice!='H' or choice!='S' or choice!='Q'):
        print('\n\n\n')
        print('{:^140}'.format('Please enter an appropriate choice!!!'))
        first_click() 

